{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "car-sale-request",
    "type": "object",
    "properties": {
      "brand": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9 ]+$",
        "minLength": 5,
        "maxLength": 20
      },
      "model": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9 ]+$",
        "minLength": 5,
        "maxLength": 20
      },
      "gearType": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9 ]+$",
        "minLength": 5,
        "maxLength": 20
      },
      "year": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]+$",
        "minLength": 4,
        "maxLength": 4
      },
      "amount": {
        "type": "integer"
      }
    },
    "required": ["brand", "model", "gearType", "amount"],
    "additionalProperties": false
  }